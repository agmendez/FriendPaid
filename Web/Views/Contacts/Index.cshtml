@using Domain.Facebook
@model Web.ViewModels.ContactsViewModel


<div class="page-header" style="padding-top: 100px">
    <h1>Contactos</h1>
</div>

<div class="container-fluid metro">
    <div class="span12">
        <ul id="sortable">
            @foreach (FacebookContact @contact in @Model.facebookContacts)
            {
                <div class="span3" style="padding-top: 15px;">
                    <li class="ui-state-default">
                        <h3>@contact.name</h3>
                        <img src="https://graph.facebook.com/@contacto.id/picture"/>
                        <div class="btn-group">
                            <button class="btn span1">Ver</button>
                            <button class="btn span2">Eliminar</button>
                        </div>
                    </li>
                </div>
            }
        </ul> 
    </div>
</div>

<script type="text/javascript" src="../../Scripts/jquery-ui-1.10.2.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#sortable").sortable();
        $("#sortable").disableSelection();
    });
</script>